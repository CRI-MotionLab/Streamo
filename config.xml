<?xml version='1.0' encoding='utf-8'?>
<widget id="org.cri-motionlab.streamo" version="0.0.1">
    <name short="Streamo">Streamo</name>
    <description>
        Mobile app streaming the phone's sensor values via OSC.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <resource-file src="www/assets/gearicon.png" target="assets/gearicon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <resource-file src="www/assets/gearicon.png" target="assets/gearicon.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-osc" spec="~1.0.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <hook src="bin/index.js" type="before_build" />
    <plugin name="cordova-plugin-magnetometer" spec="https://github.com/sdesalas/cordova-plugin-magnetometer" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.0.0" />
</widget>
